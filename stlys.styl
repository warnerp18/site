*{
  border: 0;
  font-weight: inherit;
  font-style: inherit;
  font-size: 100%;
  font-family: inherit;
  vertical-align: baseline;
  margin: 0;
  padding: 0;
}

::selection {
  background #ffb7b7
}
::-moz-selection{
  background #ffb7b7
}

h1 {
  font-size: 50px;
  line-height: 1.5em;
  font-weight: 300;
  text-shadow: 0 2px 10px #000;
  color: #fff;
}

h2 {
  font-size: 30px;
  line-height: 1.25em;
  font-weight: 300;
  text-shadow: 0 2px 10px #000;
  color: #fff;
}

p,
span,
b {
  margin-bottom: 10px;
  font-family "freight-text-pro", freightText, Georgia, serif;
  color: #000;
  font-size: 16px;
  line-height: 25px;
}

a {
  font-style: italic;
  color: rgba(255,255,255, 1);
  text-decoration: none;
  font-size: 16px;
  line-height: 24px;
}

.seperator{
  height 3px
  width 60px
  background #d9d9d9
  margin 0 auto
}
.contain580{
 max-width 580px
 margin 0 auto
}
.push60{
  margin-bottom 60px
}
#app{
  position relative
}

.menu{
  position fixed
  z-index 9
  top 0
  right 0
  display block
  width 100%
  height 40px
  -ms-transition: all 0.6s ease;
  -webkit-transition: all 0.6s ease;
  -moz-transition: all 0.6s ease;
  -o-transition: all 0.6s ease;
  transition: all 0.6s ease;
  background rgba(0, 0, 0, .3)
  &.nav-up{
    top -40px
  }
  &.black{
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.08);
    background: rgba(255, 255, 255, 0.97);
    span a{
      color #000
      &.github{
        background url('/images/github.svg') no-repeat
        background-size 25px
        &:hover{
          background url('/images/github-blue.svg') no-repeat
          background-size 25px
        }
      }
      &.linkedin{
        background url('/images/linkedin-black.svg') no-repeat
        background-size 25px
        &:hover{
          background url('/images/linkedin-blue.svg') no-repeat
          background-size 25px
        }
      }
    }
  }
  span a {
    color #fff
    float right
    position relative
    text-decoration none
    padding 10px 0
    margin-right 20px
    &.homeIcon{
      background url('./images/mnt.svg') center center no-repeat;
      background-size 40px;
      width 40px
      height 40px
      padding 0;
      margin-left 40px
      float left
    }
    &.menuLink:before{
      content ""
      position absolute
      width 100%
      height 3px
      bottom 4px
      left 0
      background-color: #fff
      visibility hidden
      -webkit-transform scaleX(0)
      transform scaleX(0)
      -webkit-transition all 0.3s ease-in-out 0s
      transition all 0.3s ease-in-out 0s
    }
    &.icon{
      height 25px
      width 25px
      position relative
      top 10px
    }
    &.linkedin{
      background: url('/images/linkedin-white.svg') no-repeat;
      background-size 25px
      &:hover{
        background url('/images/linkedin-blue.svg') no-repeat
        background-size 25px
      }
    }
    &.github{
      background: url('/images/github-white.svg') no-repeat;
      background-size 25px
      &:hover{
        background url('/images/github-blue.svg') no-repeat
        background-size 25px
      }
    }

    &:hover{
      &:before{
        visibility visible
        -webkit-transform scaleX(1)
        transform scaleX(1)
      }
    }
  }
}

.header-image{
  background url(/images/desk2.jpg) center center;
  background-size cover
  text-align center
  position relative
  top 0
  .text-container{
    position absolute
    top 50%
    right 50%
    -webkit-transform translate(50%, -60%)
    -moz-transform translate(50, -60%)
    -ms-transform translate(50%, -60%)
    -o-transform translate(50%, -60%)
    transform translate(50%, -60%)
    margin 0
    width 80%
    margin-left auto
    margin-right auto
    max-width 580px
    text-align center
    h1{
      margin-bottom 10px
    }
    h2 {
      margin-bottom 10px
    }
  }
}

