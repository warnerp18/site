*{
  border: 0;
  font-weight: inherit;
  font-style: inherit;
  font-size: 100%;
  font-family: inherit;
  vertical-align: baseline;
  margin: 0;
  padding: 0;
}

::selection {
  background #ffb7b7
}
::-moz-selection{
  background #ffb7b7
}

h1 {
  font-size: 50px;
  line-height: 1.5em;
  font-weight: 300;
  text-shadow: 0 2px 10px #000;
  color: #fff;
}

h2 {
  font-size: 30px;
  line-height: 1.25em;
  font-weight: 300;
  text-shadow: 0 2px 10px #000;
  color: #fff;
}

p {
  margin-bottom: 10px;
  font-family: Lato, sans-serif;
  color: #000;
  font-size: 16px;
  line-height: 25px;
}

a {
  font-style: italic;
  color: rgba(255,255,255, .8);
  text-decoration: none;
  font-size: 16px;
  line-height: 24px;
}

.seperator{
  height 3px
  width 60px
  background #d9d9d9
  margin 0 auto
}
.contain580{
 max-width 580px
 margin 0 auto
}
.push60{
  margin-bottom 60px
}

.header-image{
  background url(/images/desk2.jpg) center center;
  background-size cover
  text-align center
  position relative
  top 0
  .text-container{
    position absolute
    top 50%
    right 50%
    -webkit-transform translate(50%, -60%)
    -moz-transform translate(50, -60%)
    -ms-transform translate(50%, -60%)
    -o-transform translate(50%, -60%)
    transform translate(50%, -60%)
    margin 0
    width 80%
    margin-left auto
    margin-right auto
    width 580px
    text-align center
    h1{
      margin-bottom 10px
    }
    h2 {
      margin-bottom 10px
    }
  }
}

.aboutme{
 max-width 1024px
 margin 0 auto
 padding 30px 0
 p{
   span{
    font-size 60px
    line-height 75px
   }
   b{
    text-transform: uppercase;
    font-weight: 700;
   }
   a{
     color #000
     font-weight 700
     text-decoration underline
   }
 }
}


